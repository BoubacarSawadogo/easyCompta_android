<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".activities.SaisieDepenseFormActivity"
android:gravity="center_horizontal"
    >

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgg"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="NOUVELLE DEPENSE"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="@color/blackColor"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            />

        <EditText
            android:layout_width="350dp"
            android:focusable="false"
            android:id="@+id/date_depense"
            android:background="@drawable/border_ed_formulaire"
            android:layout_height="40dp"
            android:clickable="true"
            android:backgroundTint="@color/greyLighttop"
            android:editable="false"
            android:hint="Date"
            android:paddingLeft="10dp"
            tools:ignore="Deprecated" />

        <EditText
            android:layout_width="350dp"
            android:layout_marginTop="30dp"
            android:id="@+id/description_depense"
            android:background="@drawable/border_ed_formulaire"
            android:backgroundTint="@color/greyLighttop"
            android:layout_height="40dp"
            android:hint="Intitule"
            android:paddingLeft="10dp"
            />

        <EditText
            android:layout_width="350dp"
            android:layout_marginTop="30dp"
            android:id="@+id/qte_depense"
            android:background="@drawable/border_ed_formulaire"
            android:backgroundTint="@color/greyLighttop"
            android:layout_height="40dp"
            android:hint="Quantite"
            android:paddingLeft="10dp"
            />

        <EditText
            android:layout_width="350dp"
            android:layout_marginTop="30dp"
            android:id="@+id/montant_depense"
            android:background="@drawable/border_ed_formulaire"
            android:backgroundTint="@color/greyLighttop"
            android:layout_height="40dp"
            android:hint="Montant"
            android:paddingLeft="10dp"
            />

        <EditText
            android:layout_width="350dp"
            android:layout_marginTop="30dp"
            android:id="@+id/nom_fournisseur"
            android:background="@drawable/border_ed_formulaire"
            android:backgroundTint="@color/greyLighttop"
            android:layout_height="40dp"
            android:hint="Fournisseur"
            android:paddingLeft="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:background="@drawable/border_ed_formulaire"
            android:backgroundTint="@color/greyLighttop"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:padding="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:textColor="@color/blackColor"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Statut"
                android:textSize="20dp" />

            <RadioGroup
                android:id="@+id/rgroup_statut_depense"
                android:layout_width="0px"
                android:layout_height="200px"
                android:layout_weight="2"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb_paye"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:textColor="@color/blackColor"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="Payé"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/rb_non_paye"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="@color/blackColor"
                    android:checked="false"
                    android:text="Non payé"
                    android:textSize="20dp" />
            </RadioGroup>

        </LinearLayout>
        <Button
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:text="Enregistrer"
            android:textColor="@color/blackColor"
            android:textSize="25dp"
            android:id="@+id/add_new_depense"
            android:background="@drawable/border_button_valider"
            />
    </LinearLayout>
</ScrollView>


</LinearLayout>