<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schema.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    tools:context=".activities.WelcomeActivity"
    android:background="@drawable/bgg"
    >

    <LinearLayout
        android:layout_gravity="end"
        android:layout_width="300dp"
        android:id="@+id/container"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ETATS"
            android:onClick="openEtat"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:background="@color/colorblue"
            android:id="@+id/tv_etats"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Saisir une vente"
            android:gravity="center_vertical"
            android:background="@color/greyLight"
            android:id="@+id/tv_saisie_vente"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Saisir une depense"
            android:gravity="center_vertical"
            android:background="@color/greyLight"
            android:id="@+id/tv_saisie_depense"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Entree fonds Banque"
            android:gravity="center_vertical"
            android:background="@color/greyLight"
            android:id="@+id/tv_entree_banque"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sortie fonds Banque"
            android:gravity="center_vertical"
            android:background="@color/greyLight"
            android:id="@+id/tv_sortie_banque"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Entree fonds Caisse"
            android:gravity="center_vertical"
            android:background="@color/greyLight"
            android:id="@+id/tv_entree_caisse"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sortie fonds Caisse"
            android:gravity="center_vertical"
            android:background="@color/greyLight"
            android:id="@+id/tv_sortie_caisse"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Aide"
            android:gravity="center_vertical"
            android:background="@color/greyLight"
            android:id="@+id/tv_aide"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/img_menu"
            android:src="@drawable/logoeasycompta"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BIENVENUE"
        android:gravity="center"
        android:id="@+id/bienvenue"
        android:textSize="40dp"
        style="@style/TextAppearance.MaterialComponents.Headline6"/>
</androidx.drawerlayout.widget.DrawerLayout>

